<h1>Burgers!</h1>

<h2>Available burgers!</h2>
<div class = "row">

<ul>
  {{#each burger_data}}
    {{#unless this.devoured}}
      <div class="col-md-9 text-center">
          
        <span>{{this.id}}. {{this.burger_name}}
        </span>
    </div>
    <div class="col-md-3 text-center">
        <form class="devour-form button-size">
            <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
            <button type="submit" class="btn btn-default" class = "devour" id = "devour">Devour it!</button>
        </form>
    </div>
    {{/unless}}
  {{/each}}
</ul>

</div>

<h2>Eaten burgers!</h2>

<ul>
  {{#each burger_data}}
    {{#if this.devoured}}
     <div class="col-md-9 text-center">
        <span>{{this.id}}. {{this.burger_name}}
        </span>
    </div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
