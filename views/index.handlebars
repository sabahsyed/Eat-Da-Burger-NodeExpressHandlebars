<h1>Burgers</h1>

<h2>Available burgers!</h2>
<div class="row">
<div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <ul>
          {{#each burger_data}}
          {{#unless this.devoured}}
          <div class="col-sm-4 text-center">

            <span>{{this.burger_name}}
            </span>
          </div>
          <div class="col-sm-4 text-center">
            <form class="devour-form button-size">
              <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
              <div class="col-sm-4 text-center">
                <button type="submit" class="btn btn-default devourBtn devour" id="devour">Devour it!</button>
              </div>
            </form>
          </div>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

</div>


<h2> Devoured!</h2>
<div class ="row">
<ul>
  {{#each burger_data}}
  {{#if this.devoured}}
  <div class="col-md-12 text-center">
    <span>{{this.burger_name}}
    </span>
  </div>
  {{/if}}
  {{/each}}
</ul>
</div>





<h2>Add a burger</h2>
<div class = "row">
<form class="create-form">
  <div class="col-md-12 text-center">
  <div class="form-group">
    <label for="burger_name">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>


  <button type="submit">Submit</button>
  </div>
</form>
</div>